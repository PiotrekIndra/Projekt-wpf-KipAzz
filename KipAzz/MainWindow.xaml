<Window x:Class="KipAzz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KipAzz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:PasswordVM/>
    </Window.DataContext>
    <Grid>
        <Button Content="Dodaj nowe hasło" HorizontalAlignment="Left" Margin="135,145,0,0" VerticalAlignment="Top" Command="{Binding AddPasword}"/>
        <Button Content="Aktualizuj hasło" HorizontalAlignment="Left" Margin="360,145,0,0" VerticalAlignment="Top" Command="{Binding UpdatePassword}"/>
        
    </Grid>
</Window>
